---
import '@styles/global.css';
import { SmoothScroll } from '@components/SmoothScroll';

interface Props {
	title: string;
    lang?: 'en' | 'es';
    description?: string;
}

const { title, lang = 'en', description = "MRG develops - The Cloud Brewery | Your AI-driven Multi-Cloud Technology Partner" } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-background text-foreground antialiased min-h-screen flex flex-col">
		<SmoothScroll client:only="react" />
		<slot />
	</body>
</html>
